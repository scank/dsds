/* USER CODE BEGIN 1 */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)//自定义回调函数 在UART_Receive_IT()中调用
{
	//判断是哪个串口触发的中断  huart1.Instance = USART1;定义在MX_USART1_UART_Init中
	if(huart==&huart1)//huart ->Instance == USART1两种判断条件等价
	{
		#if fire_debug
			protocol_data_recv(&a1RxBuffer, 1);
		#endif
		
		#if printf_debug
			if(0x99 == a1RxBuffer)
			{
				measure_flag = 1;
			}
			
		#endif
		
		HAL_UART_Receive_IT(&huart1 ,(uint8_t *)&a1RxBuffer ,1);	
	}
	
	
	if(huart==&huart2)//huart ->Instance == USART2两种判断条件等价
	{
		if(RS485_RX_CNT<512)
		{
			modbus_time = 0;
			HAL_TIM_Base_Start_IT(&htim13); //使用定时器的时候调用这个函数E;   //开启计时器
			RS485_RX_BUF[RS485_RX_CNT]=a2RxBuffer;//记录接收到的值
			RS485_RX_CNT++;						//接收数据增加1 
			if(RS485_RX_CNT > 63 || (RS485_RX_CNT[0] != modbus_slave_addr))
			{
				RS485_RX_CNT = 0;
			}
		}
		HAL_UART_Receive_IT(&huart2 ,(uint8_t *)&a2RxBuffer ,1);
	}
	
	
	if(huart==&huart3)//huart ->Instance == USART1两种判断条件等价
	{

		HAL_UART_Receive_IT(&huart3 ,(uint8_t *)&a3RxBuffer ,1);
	}
}
